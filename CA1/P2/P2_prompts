#!/bin/bash

# Check if required arguments are provided
if [ $# -lt 3 ]; then
  echo "âŒ Usage: $0 -d \"/dir1 /dir2\" -i [daily|weekly|monthly] -o /backup/path [-r true|false]"
  exit 1
fi

# Parse command-line arguments (now mandatory)
while getopts ":d:i:o:r:" opt; do
  case $opt in
    d) DIRS_TO_BACKUP="$OPTARG" ;;
    i) RUN_INTERVAL="$OPTARG" ;;
    o) OUTPUT_DIR="$OPTARG" ;;
    r) REBOOT_AFTER="${OPTARG:-false}" ;;  # Default: false if -r omitted
    *) echo "âŒ Invalid option: -$OPTARG" >&2
       exit 1
  esac
done

# Validate run interval
if [[ "$RUN_INTERVAL" != "daily" && "$RUN_INTERVAL" != "weekly" && "$RUN_INTERVAL" != "monthly" ]]; then
  echo "âŒ Invalid run interval: $RUN_INTERVAL (must be daily/weekly/monthly)"
  exit 1
fi

# Create backup directory if missing
mkdir -p "$OUTPUT_DIR"

# Generate backup filename with timestamp
BACKUP_FILE="$OUTPUT_DIR/backup_$(date +%Y-%m-%d_%H-%M-%S)_$RUN_INTERVAL.tar.gz"

# Perform backup (compressed tar.gz)
echo "ðŸ“‚ Backing up: $DIRS_TO_BACKUP"
echo "ðŸ’¾ Saving to: $BACKUP_FILE"
sudo tar -czvf "$BACKUP_FILE" $DIRS_TO_BACKUP 2>/dev/null

# Verify backup
if [ -f "$BACKUP_FILE" ]; then
  echo "âœ… Backup successful! Size: $(du -h "$BACKUP_FILE" | cut -f1)"
else
  echo "âŒ Backup failed!" >&2
  exit 1
fi

# Reboot if requested
if [ "$REBOOT_AFTER" = true ]; then
  echo "ðŸ”„ Rebooting system..."
  sudo reboot
fi

